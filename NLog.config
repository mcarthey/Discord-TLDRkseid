<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

    <targets>
        <!-- Database target: logging into SQLite (table LogEntries) -->
        <target name="db" xsi:type="Database"
                connectionString="Data Source=log.sqlite"
                commandText="INSERT INTO LogEntries (Timestamp, Level, Logger, Message, UserId, GuildId) VALUES (@time, @level, @logger, @message, @userId, @guildId)">
            <parameter name="@time" layout="${longdate}" />
            <parameter name="@level" layout="${level}" />
            <parameter name="@logger" layout="${logger}" />
            <parameter name="@message" layout="${message}" />
            <parameter name="@userId" layout="${event-properties:item=userId}" />
            <parameter name="@guildId" layout="${event-properties:item=guildId}" />
        </target>

        <!-- Console target -->
        <target name="console" xsi:type="Console"
                layout="${longdate} ${uppercase:${level}} ${message}" />
    </targets>

    <rules>
        <!-- Log Info and above to both database and console -->
        <logger name="*" minlevel="Info" writeTo="db,console" />
    </rules>
</nlog>